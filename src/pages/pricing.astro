---
// Import the necessary components
import PricingSection from "@/components/sections/pricing/PricingSection.astro";
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import pricing from "@data/pricing.json";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://assertive.ai/contact",
    "url": "https://assertive.ai/contact",
    "name": "Contact Us | Assertive",
    "description":
      "Have questions or want to discuss integrating Assertive AI? Reach out, and let's discuss the perfect plan for you.",
    "isPartOf": {
      "@type": "WebSite",
      "url": "https://assertive.ai",
      "name": "Assertive",
      "description":
        "Assertive AI offers a reliable autonomous unit testing solution for companies looking to cut costs on manual testing efforts and accelerate development",
    },
    "inLanguage": "en-US"
  }}
>
  <PricingSection pricing={pricing} />
</MainLayout>
